<VBox fx:id="cardPane" alignment="CENTER" prefHeight="180.0" prefWidth="150.0" spacing="8.0" styleClass="exercise-card" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.controller.ui.ExerciseCardController">
    <children>
        <ImageView fx:id="exerciseImage" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../gif/agachamento_livre.gif" />
            </image>
        </ImageView>
        <Label fx:id="exerciseName" text="Nome do ExercÃ­cio" textAlignment="CENTER" wrapText="true" />
        <HBox fx:id="botoesBox" alignment="CENTER" managed="false" spacing="5.0" visible="false">
            <children>
                <Button fx:id="editarBtn" mnemonicParsing="false" onAction="#handleEditar" text="Editar" />
                <Button fx:id="excluirBtn" mnemonicParsing="false" onAction="#handleExcluir" text="Excluir" />
            </children>
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <cursor>
        <Cursor fx:constant="HAND" />
    </cursor>
</VBox>