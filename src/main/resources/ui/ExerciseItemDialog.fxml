<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.controller.ui.ExerciseItemDialogController">
    <children>
        <GridPane prefHeight="400.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="194.0" minHeight="10.0" prefHeight="105.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="314.0" minHeight="10.0" prefHeight="295.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label fx:id="exerciseName" text="Exercicio" textFill="#8a806f" GridPane.valignment="CENTER">
                    <font>
                        <Font name="System Bold" size="25.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="30.0" />
                    </GridPane.margin>
                </Label>

                <ImageView fitHeight="26.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="TOP">
                    <image>
                        <Image url="@../images/cuida_weight-outline.png" />
                    </image>
                    <GridPane.margin>
                        <Insets left="17.0" top="30.0" />
                    </GridPane.margin>
                </ImageView>

                <Label text="Carga:" textFill="#8a806f" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets left="50.0" top="30.0" />
                    </GridPane.margin>
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <TextField fx:id="cargaField" text="0" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" style="-fx-border-color: #8A806F; -fx-border-width: 1px; -fx-border-radius: 5; -fx-alignment: CENTER;" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="30.0" />
                    </GridPane.margin>
                </TextField>

                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <image>
                        <Image url="@../images/tabler_repeat.png" />
                    </image>
                    <GridPane.margin>
                        <Insets left="17.0" />
                    </GridPane.margin>
                </ImageView>

                <Label text="Repetições:" textFill="#8a8070" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="50.0" />
                    </GridPane.margin>
                </Label>

                <ImageView fx:id="exerciseImage" fitHeight="224.0" fitWidth="294.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP">
                    <image>
                        <Image url="@../images/no image.png" />
                    </image>
                </ImageView>

                <Button fx:id="btnRemover" onAction="#handleRemove" prefHeight="38.0" prefWidth="125.0" style="-fx-background-color: #C0392b; -fx-cursor: hand;" text="Excluir" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
                    <GridPane.margin>
                        <Insets bottom="15.0" left="20.0" />
                    </GridPane.margin>
                </Button>

                <Button fx:id="btnSalvar" onAction="#handleConfirm" prefHeight="38.0" prefWidth="125.0" style="-fx-background-color: #8A806F; -fx-border-radius: 5; -fx-cursor: hand;" text="Adicionar" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
                    <GridPane.margin>
                        <Insets bottom="15.0" right="20.0" />
                    </GridPane.margin>
                </Button>

                <TextField fx:id="repsField" text="0" editable="false" alignment="CENTER" maxWidth="40.0" style="-fx-border-color: #8A806F; -fx-border-width: 1px; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets right="100.0" />
                    </GridPane.margin>
                </TextField>

                <Button onAction="#incrementReps" maxHeight="28.0" maxWidth="28.0" minHeight="28.0" minWidth="28.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="28.0" style="-fx-background-color: #8A806F; -fx-cursor: hand;" text="+" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <GridPane.margin>
                        <Insets right="60.0" />
                    </GridPane.margin>
                </Button>

                <Button onAction="#decrementReps" maxHeight="28.0" maxWidth="28.0" minHeight="28.0" minWidth="28.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="28.0" style="-fx-background-color: #8A806F; -fx-cursor: hand;" text="-" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <GridPane.margin>
                        <Insets right="27.0" />
                    </GridPane.margin>
                </Button>

                <Label text="Kg" textFill="#8a806f" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="TOP">
                    <font>
                        <Font name="System" size="20.0" />
                    </font>
                    <GridPane.margin>
                        <Insets right="90.0" top="35.0" />
                    </GridPane.margin>
                </Label>
            </children>
        </GridPane>
    </children>
</AnchorPane>