<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.controller.ui.MetricasScreenController">
    <left>
        <fx:include fx:id="sideMenu" source="SideMenu.fxml" />
    </left>
    <center>
        <VBox spacing="14.0" style="-fx-background-color: #D4D5D6;">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>
            <Label style="-fx-font-family: 'Inter'; -fx-font-size: 28px; -fx-text-fill: #2c3e50;" text="Minhas Métricas" />

            <!-- Cadastro rápido de indicador -->
            <TitledPane text="Cadastrar Indicador">
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120" />
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints halignment="RIGHT" minWidth="120" />
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints halignment="RIGHT" minWidth="120" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <Label text="Data:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <DatePicker fx:id="dataPicker" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Peso (kg):" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <TextField fx:id="pesoField" promptText="ex: 75.5" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                    <Label text="Altura (cm):" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                    <TextField fx:id="alturaField" promptText="ex: 175" GridPane.columnIndex="5" GridPane.rowIndex="0" />

                    <Label text="Gordura (%):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="gorduraField" promptText="ex: 15.2" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Massa Magra (%):" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <TextField fx:id="massaMagraField" promptText="ex: 70.8" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                    <Button fx:id="adicionarButton" onAction="#handleAdicionarIndicador" style="-fx-background-color: #A6917E; -fx-text-fill: white; -fx-font-weight: bold;" text="Adicionar" GridPane.columnIndex="5" GridPane.rowIndex="1" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </TitledPane>

            <!-- Filtros e ações -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <children>
                    <Label text="Período:" />
                    <DatePicker fx:id="inicioPicker" promptText="Início" />
                    <DatePicker fx:id="fimPicker" promptText="Fim" />
                    <Button fx:id="filtrarButton" onAction="#handleFiltrar" style="-fx-background-color: #A6917E; -fx-text-fill: white; -fx-font-weight: bold;" text="Filtrar" />
                    <Button fx:id="mostrarTodosButton" onAction="#handleMostrarTodos" text="Mostrar todos" />
                    <Pane HBox.hgrow="ALWAYS" />
                    <Button fx:id="relatorioDiferencaButton" onAction="#handleRelatorioDiferenca" text="Relatório Diferença" />
                    <Button fx:id="exportarListaButton" onAction="#handleExportarLista" text="Exportar Lista" />
                    <Button fx:id="exportarDiffButton" onAction="#handleExportarDiferenca" text="Exportar Diferença" />
                    <Button fx:id="importarCsvButton" onAction="#handleImportarCsv" text="Importar CSV" />
                </children>
            </HBox>

            <!-- Tabela de indicadores -->
            <TableView fx:id="indicadoresTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colData" prefWidth="100" text="Data" />
                    <TableColumn fx:id="colPeso" prefWidth="90" text="Peso (kg)" />
                    <TableColumn fx:id="colAltura" prefWidth="100" text="Altura (cm)" />
                    <TableColumn fx:id="colGordura" prefWidth="100" text="Gordura (%)" />
                    <TableColumn fx:id="colMassaMagra" prefWidth="130" text="Massa Magra (%)" />
                    <TableColumn fx:id="colImc" prefWidth="80" text="IMC" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
