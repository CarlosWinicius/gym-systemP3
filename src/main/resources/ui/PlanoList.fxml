<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox fx:id="cardPane" alignment="CENTER_LEFT" prefHeight="55.0" prefWidth="650" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.5, 0, 1);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.controller.ui.PlanoListController">
    <padding>
        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
    </padding>
    <children>
        <ImageView fx:id="plane" fitHeight="26.0" fitWidth="29.0" onMouseClicked="#handleVerPlano" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/minihalter.png" /> </image>
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </ImageView>
        <Label fx:id="nomePlanoLabel" onMouseClicked="#handleVerPlano" prefHeight="45.0" prefWidth="489.0" style="-fx-font-family: 'Inter'; -fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;" text="Treino ombro" HBox.hgrow="ALWAYS" />
      <ImageView fx:id="delete" fitHeight="30.0" fitWidth="30.0" layoutX="40.0" layoutY="40.0" onMouseClicked="#handleDeletePlano" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/lixeira.png" />
         </image>
      </ImageView>
      <Region fx:id="Plane1" layoutX="168.0" layoutY="20.0" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#handleVerPlano" prefHeight="35.0" prefWidth="30.0" />

        <ImageView fx:id="edit" fitHeight="25.0" fitWidth="25.0" onMouseClicked="#handleEditarPlano" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/solar_pen-broken.png" /> </image>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </ImageView>
    </children>
    <cursor>
        <Cursor fx:constant="HAND" />
    </cursor>
</HBox>
