<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.controller.ui.PlansScreenController">
    <left>
        <fx:include fx:id="sideMenu" source="SideMenu.fxml" />
    </left>
    <center>
        <VBox alignment="TOP_LEFT" spacing="15.0" style="-fx-background-color: #D4D5D6;">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label style="-fx-font-family: 'Inter'; -fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Meus Planos" />
                        <Button fx:id="adicionarButton" onAction="#handleAdicionarPlano" style="-fx-background-color: #A6917E; -fx-text-fill: white; -fx-font-weight: bold;" text="+ Adicionar Plano" />
                    </children>
                </HBox>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                    <content>
                        <TilePane fx:id="PlanoTilePane" hgap="20" vgap="20">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                        </TilePane>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>
